# Copy this file to terraform.tfvars and customize as needed

# IMPORTANT: Update these values with your SUSE subscription details
suse_email="your-email@example.com"
suse_regcode="YOUR-REGISTRATION-CODE-HERE"

# Optional: Uncomment and set this if using SMT/RMT server instead of SCC
# smt_url="https://your-smt-server.example.com"

# General params
aws_region  = "us-east-2"
environment = "suse-demo-aws"
owner       = "jradtke-suse"

# Instance configuration
instance_type     = "t3.xlarge" # Minimum recommended for Rancher
root_volume_size  = 100

# SSH access (paste your public SSH key)
ssh_public_key = "" 
# **********************************************************************
# aws ec2 create-key-pair --key-name suse-demo-aws --region us-east-2 --query "KeyMaterial" --output text > suse-demo-aws.pem; chmod 0600 suse-demo-aws.pem
# ssh-keygen -y -f suse-demo-aws.pem > suse-demo-aws.pub; cat suse-demo-aws.pub
# aws ec2 describe-key-pairs --region us-east-2  --key-name suse-demo-aws --include-public-key --query "KeyPairs[0].PublicKey" --output text
# NOTE:  the terraform apply will create suse-demo-aws-rancher-key also
# ssh -i suse-demo-aws.pem ec2-user@rancher.suse-demo-aws.kubernerdes.com 
# **********************************************************************

# Network access - IMPORTANT: Restrict to your IP for security
allowed_cidr_blocks = ["0.0.0.0/0"]

# Create Elastic IP for stable public IP
create_eip = true

# Rancher configuration
rancher_version      = "2.9.2"
cert_manager_version = "1.15.3"
rancher_hostname     = "rancher" # Leave empty to use IP-based hostname

# Route53 DNS Configuration (optional)
# Set create_route53_record = true to create a DNS record
create_route53_record = true 
domain_name          = "suse-demo-aws.kubernerdes.com"           # e.g., "example.com"
rancher_subdomain    = "rancher"    # Will create rancher.example.com
route53_zone_id      = ""           # Leave empty to auto-discover by domain_name
                                    # aws route53 list-hosted-zones-by-name --dns-name suse-demo-aws.kubernerdes.com --query "HostedZones[].Id" --output text 

